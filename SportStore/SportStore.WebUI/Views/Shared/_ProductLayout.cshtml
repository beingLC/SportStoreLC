<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @*<link href="~/Content/Site.css" type="text/css" rel="stylesheet"/>*@
    <link href="~/Content/bootstrap.css" type="text/css" rel="stylesheet"/>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-color:white">
    <div class="container-fluid" style="background-color:darkgray">
        <h1 style="color:white">SPORT STORE<small>@{Html.RenderAction("Summary", "Cart"); }</small></h1>
    </div>
    <div class="container col-md-offset-10 col-md-2">
        <ol class="breadcrumb col-md-offset-3" style="font-size:14px;">
            <li><a href="~/Account/Login">Login</a></li>
            <li><a href="~/Account/Register">Register</a></li>
            <li><a href="~/Admin/Index">Admin</a></li>
        </ol>
    </div>
    <div class="container">
        <div>
            <br/>
        </div>
        <div class="row">
            <div class="col-lg-2">
                @{Html.RenderAction("Menu", "Nav"); }
            </div>
            <div class="col-lg-10">
                @RenderBody()
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
