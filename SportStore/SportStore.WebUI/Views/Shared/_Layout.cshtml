<!DOCTYPE html>

<html lang="zh-cn">
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <title>@ViewBag.Title</title>

</head>
<body>
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="3000" style="float:none;display:block;margin:auto">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Content/images/11.jpg" alt="First slide"/>
                <div class="carousel-caption">美丽家园</div>
            </div>
            <div class="item">
                <img src="~/Content/images/12.jpeg" alt="Second slide"/>
                <div class="carousel-caption">华丽宫殿</div>
            </div>
            <div class="item">
                <img src="~/Content/images/13.jpeg" alt="Third slide"/>
                <div class="carousel-caption">魅力上海</div>
            </div>
        </div>
        <a class="carousel-control left" href="#myCarousel"
           data-slide="prev">
            &lsaquo;
        </a>
        <a class="carousel-control right" href="#myCarousel"
           data-slide="next">
            &rsaquo;
        </a>
    </div>
    <div class="container-fluid">
        @RenderBody()
    </div>
 
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>